{% extends 'base.html.twig' %}

{# Photo du campus UNIQUEMENT ici #}
{% block body_class %}bg-landing{% endblock %}

{# On remplace le wrapper par défaut : hero + features #}
{% block page_shell %}

    {# HERO sur la photo, avec panneau translucide au centre #}
    <section class="hero-landing">
        <div class="container">
            <div class="hero-inner text-center">
                <h1 class="hero-title fw-bold mb-3">Bienvenue sur ENIWhere&nbsp;!</h1>
                <p class="hero-lead mb-4">
                    Découvrez les événements, rejoignez votre communauté campus
                    et gérez votre profil facilement.
                </p>
                <a href="{{ path('event_index') }}" class="btn btn-primary btn-lg shadow">
                    Voir les événements à venir
                </a>
            </div>
        </div>
    </section>

    {# FEATURES : section claire qui tranche sous le hero #}
    <section class="features-section">
        <div class="container">
            <div class="row g-4 text-center justify-content-center">
                <div class="col-md-5">
                    <div class="card h-100 feature-card border-0">
                        <div class="card-body">
                            <i class="bi bi-calendar-event display-5 text-primary mb-3"></i>
                            <h5 class="card-title fw-semibold">Événements</h5>
                            <p class="card-text text-muted">
                                Consultez les événements disponibles sur votre campus
                                et inscrivez-vous facilement.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-5">
                    <div class="card h-100 feature-card border-0">
                        <div class="card-body">
                            <i class="bi bi-person-circle display-5 text-primary mb-3"></i>
                            <h5 class="card-title fw-semibold">Profil</h5>
                            <p class="card-text text-muted">
                                Gérez vos informations, vos inscriptions et vos événements favoris
                                en toute simplicité.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

