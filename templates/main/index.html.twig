{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <section id="intro" class="d-flex align-items-center justify-content-center text-center">
        <div class="container">
            <h1 class="display-4 fw-bold mb-3 text-white">Bienvenue sur ENIWhere !</h1>
            <p class="lead mb-4 text-white">Découvrez les événements, rejoignez votre communauté campus et gérez votre profil facilement.</p>
            <a href="{{ path('event_index') }}" class="btn btn-lg btn-primary shadow">Voir les événements à venir</a>
        </div>
    </section>

    <section id="features" class="py-5 bg-light">
        <div class="container">
            <div class="row g-4 justify-content-center text-center">
                <div class="col-md-5">
                    <div class="card h-100 shadow-sm border-0 feature-card">
                        <div class="card-body">
                            <i class="bi bi-calendar-event display-4 text-primary mb-3"></i>
                            <h5 class="card-title">Événements</h5>
                            <p class="card-text">Consultez les événements disponibles sur votre campus et inscrivez-vous facilement.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-5">
                    <div class="card h-100 shadow-sm border-0 feature-card">
                        <div class="card-body">
                            <i class="bi bi-person-circle display-4 text-primary mb-3"></i>
                            <h5 class="card-title">Profil</h5>
                            <p class="card-text">Gérez vos informations, vos inscriptions et vos événements favoris en toute simplicité.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <style>

        #intro {
            height: 80vh;
            background: linear-gradient(135deg, #007bff 0%, #00c6ff 100%);
        }


        #intro h1, #intro p {
            color: #fff;
        }


        #intro .btn-primary {
            font-weight: 600;
            padding: 0.75rem 1.5rem;
        }


        .feature-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 15px;
        }
        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 30px rgba(0,0,0,0.2);
        }


        .feature-card i {
            transition: transform 0.3s ease;
        }
        .feature-card:hover i {
            transform: scale(1.2);
        }


        .feature-card .card-title {
            font-weight: 600;
            margin-bottom: 1rem;
        }


        .feature-card .card-text {
            color: #555;
        }
    </style>
{% endblock %}
