{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Profil de {{ user.username }}{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="card shadow-sm text-center">
                    <div class="card-body p-4">

                        {# Photo de profil #}
                        {% if user.photoName %}
                            <img
                                src="{{ asset('uploads/photos/' ~ user.photoName) }}"
                                alt="Photo de {{ user.firstName }} {{ user.lastName }}"
                                class="rounded-circle border shadow-sm mb-3"
                                style="width: 180px; height: 180px; object-fit: cover;"
                            >
                        {% else %}
                            <div
                                class="rounded-circle d-flex align-items-center justify-content-center mb-3 border"
                                style="width: 180px; height: 180px; background: #e9ecff; color: #6c757d; font-weight: 600;"
                            >
                                Aucune photo
                            </div>
                        {% endif %}

                        <h2 class="fw-bold text-primary mb-1">{{ user.firstName }} {{ user.lastName }}</h2>
                        <p class="text-muted mb-4">@{{ user.username }}</p>

                        <div class="text-start mx-auto" style="max-width: 420px;">
                            <p class="mb-2"><strong>Email :</strong> {{ user.email }}</p>
                            <p class="mb-2"><strong>Téléphone :</strong> {{ user.phoneNumber ?: 'Non renseigné' }}</p>
                            <p class="mb-0"><strong>Site :</strong> {{ user.site ? user.site.name : 'Non attribué' }}</p>
                        </div>

                        <div class="d-flex justify-content-center flex-wrap gap-2 mt-4">
                            {% if app.user and app.user.id == user.id %}
                                <a href="{{ path('profile_edit') }}" class="btn btn-primary">
                                    <i class="bi bi-pencil-square me-1"></i> Modifier
                                </a>
                            {% endif %}
                            <a href="{{ path('app_main') }}" class="btn btn-outline-secondary">
                                ← Retour
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

