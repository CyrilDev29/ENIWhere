{% extends 'base.html.twig' %}

{% block title %}
    {% if is_admin %}
        Modifier l'utilisateur {{ form.vars.data.username }}
    {% else %}
        Modifier mon profil
    {% endif %}
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">
            {% if is_admin %}
                Modifier l'utilisateur {{ form.vars.data.username }}
            {% else %}
                Modifier mon profil
            {% endif %}
        </h1>

        {# --- Flash messages --- #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'row g-3 needs-validation', 'novalidate': 'novalidate'}}) }}

        <div class="col-md-6">
            {{ form_row(form.lastName, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.firstName, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.plainPassword, {'label': 'Mot de passe', 'attr': {'class': 'form-control'}}) }}
        </div>

        {% if form.site is defined %}
            <div class="col-md-6">
                {{ form_row(form.site, {'attr': {'class': 'form-select'}}) }}
            </div>
        {% endif %}

        {% if form.roles is defined %}
            <div class="col-md-12">
                {{ form_row(form.roles) }}
            </div>
        {% endif %}

        {% if form.vars.data.photoName %}
            <div class="col-md-6 mb-3">
                <label class="form-label">Photo actuelle :</label>
                <div>
                    <img src="{{ asset('uploads/photos/' ~ form.vars.data.photoName) }}"
                         alt="Photo actuelle"
                         style="width: 120px; height: 90px; object-fit: cover; border: 1px solid #ddd;">
                </div>
            </div>
        {% endif %}

        {{ form_rest(form) }}

        <div class="col-12 mt-3 d-flex">
            <button type="submit" class="btn btn-primary me-2">Enregistrer</button>
            <a href="{{ is_admin ? path('admin_user_list') : path('profile_show') }}" class="btn btn-secondary">Annuler</a>
        </div>

        {{ form_end(form) }}

        {% if is_admin %}
            <div class="col-12 mt-3">
                <form method="post"
                      action="{{ path('admin_user_delete', {id: user.id}) }}"
                      onsubmit="return confirm('Voulez-vous vraiment supprimer cet utilisateur ?');"
                      style="display:inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                    <button class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        {% endif %}
    </div>
{% endblock %}
