{% extends 'base.html.twig' %}

{% block title %}
    {% if is_admin %}
        Modifier l'utilisateur {{ form.vars.data.username }}
    {% else %}
        Modifier mon profil
    {% endif %}
{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8 col-xl-7">

                {# Carte avec hover animé grâce à .card-hover #}
                <div class="card card-hover shadow-sm">
                    <div class="card-header bg-primary-subtle text-primary border-0">
                        <h5 class="mb-0">
                            {% if is_admin %}
                                Modifier l'utilisateur {{ form.vars.data.username }}
                            {% else %}
                                Modifier mon profil
                            {% endif %}
                        </h5>
                    </div>

                    <div class="card-body">
                        {# Flash messages #}
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                                </div>
                            {% endfor %}
                        {% endfor %}

                        {{ form_start(form, {'attr': {'class': 'row g-3 needs-validation', 'novalidate': 'novalidate'}}) }}

                        <div class="col-md-6">{{ form_row(form.lastName,   {'attr': {'class': 'form-control'}}) }}</div>
                        <div class="col-md-6">{{ form_row(form.firstName,  {'attr': {'class': 'form-control'}}) }}</div>

                        <div class="col-md-6">{{ form_row(form.username,   {'attr': {'class': 'form-control'}}) }}</div>
                        <div class="col-md-6">{{ form_row(form.email,      {'attr': {'class': 'form-control'}}) }}</div>

                        <div class="col-md-6">{{ form_row(form.phoneNumber,{'attr': {'class': 'form-control'}}) }}</div>
                        <div class="col-md-6">{{ form_row(form.plainPassword, {'label': 'Mot de passe', 'attr': {'class': 'form-control'}}) }}</div>

                        {% if form.site is defined %}
                            <div class="col-md-6">{{ form_row(form.site, {'attr': {'class': 'form-select'}}) }}</div>
                        {% endif %}

                        {% if form.roles is defined %}
                            <div class="col-12">{{ form_row(form.roles) }}</div>
                        {% endif %}

                        {% if form.vars.data.photoName %}
                            <div class="col-md-6">
                                <label class="form-label fw-semibold mb-2">Photo actuelle :</label>
                                <div>
                                    <img src="{{ asset('uploads/photos/' ~ form.vars.data.photoName) }}"
                                         alt="Photo actuelle"
                                         class="rounded-3 border object-fit-cover"
                                         style="width: 140px; height: 105px;">
                                </div>
                            </div>
                        {% endif %}

                        {{ form_rest(form) }}

                        <div class="col-12 mt-3 d-flex justify-content-center gap-2 flex-wrap">
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                            <a href="{{ is_admin ? path('admin_user_list') : path('profile_show') }}" class="btn btn-outline-secondary">Annuler</a>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

