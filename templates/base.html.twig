{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}ENIWhere{% endblock %}</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    {# Icônes Bootstrap pour le footer #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    {{ encore_entry_link_tags('app') }}
    {% block stylesheets %}{% endblock %}
</head>
<body class="d-flex flex-column min-vh-100">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('event_index') }}">ENIWhere</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Basculer la navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">

                {% if app.user %}
                    {# Liens communs (connecté) #}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('profile_edit') }}">Profil ({{ app.user.username }})</a>
                    </li>

                    {% if is_granted('ROLE_ADMIN') %}
                        {# === ADMIN : n'afficher que des pages /admin === #}
                        <li class="nav-item"><a class="nav-link" href="{{ path('admin_user_list') }}">Utilisateurs</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('admin_user_create') }}">Créer un utilisateur</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('admin_import_users') }}">Importer des utilisateurs</a></li>

                    {% elseif is_granted('ROLE_USER') %}
                        {# === USER : n'afficher que des pages non-admin (événements, profil) === #}
                        <li class="nav-item"><a class="nav-link" href="{{ path('event_index') }}">Toutes les sorties</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('event_new') }}">Créer une sortie</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('my_events') }}">Mes sorties</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('profile_show') }}">Mon profil</a></li>
                    {% endif %}

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Se déconnecter</a>
                    </li>

                {% else %}
                    {# Visiteur #}
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Se connecter</a></li>
                {% endif %}

            </ul>
        </div>
    </div>
</nav>

<main class="container mb-5">
    {% block body %}{% endblock %}
</main>

{# ===== Footer (adapté à ENIWhere + rôles) ===== #}
{% block footer %}
    <footer class="bg-dark text-light mt-auto pt-4 pb-2">
        <div class="container text-center text-md-start">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5 class="text-uppercase mb-3">ENIWhere</h5>
                    <p class="mb-0">Organise, participe et partage tes sorties entre apprenants ENI.</p>
                </div>

                <div class="col-md-4 mb-3">
                    <h5 class="text-uppercase mb-3">Liens utiles</h5>
                    <ul class="list-unstyled">

                        {% if is_granted('ROLE_ADMIN') %}
                            {# === ADMIN : uniquement /admin === #}
                            <li><a href="{{ path('admin_user_list') }}" class="text-light text-decoration-none">Utilisateurs</a></li>
                            <li><a href="{{ path('admin_user_create') }}" class="text-light text-decoration-none">Créer un utilisateur</a></li>
                            <li><a href="{{ path('admin_import_users') }}" class="text-light text-decoration-none">Importer des utilisateurs</a></li>

                        {% elseif is_granted('ROLE_USER') %}
                            {# === USER : uniquement pages non-admin === #}
                            <li><a href="{{ path('event_index') }}" class="text-light text-decoration-none">Toutes les sorties</a></li>
                            <li><a href="{{ path('my_events') }}" class="text-light text-decoration-none">Mes sorties</a></li>
                            <li><a href="{{ path('event_new') }}" class="text-light text-decoration-none">Créer une sortie</a></li>
                            <li><a href="{{ path('profile_show') }}" class="text-light text-decoration-none">Mon profil</a></li>

                        {% else %}
                            {# === Visiteur === #}
                            <li><a href="{{ path('event_index') }}" class="text-light text-decoration-none">Accueil</a></li>
                            <li><a href="{{ path('app_login') }}" class="text-light text-decoration-none">Se connecter</a></li>
                        {% endif %}

                        {# Auth commun #}
                        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                            <li><a href="{{ path('app_logout') }}" class="text-light text-decoration-none">Se déconnecter</a></li>
                        {% else %}
                            <li><a href="{{ path('app_login') }}" class="text-light text-decoration-none">Se connecter</a></li>
                        {% endif %}
                    </ul>
                </div>

                <div class="col-md-4 mb-3">
                    <h5 class="text-uppercase mb-3">Suivez-nous</h5>
                    <a href="#" class="text-light me-2"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="text-light me-2"><i class="bi bi-twitter-x"></i></a>
                    <a href="#" class="text-light me-2"><i class="bi bi-instagram"></i></a>
                </div>
            </div>

            <div class="text-center mt-3">
                <small>&copy; {{ "now"|date("Y") }} ENIWhere — Tous droits réservés.</small>
                {% if is_granted('ROLE_ADMIN') %}
                    <small class="d-block opacity-75">Connecté : Admin</small>
                {% elseif is_granted('ROLE_USER') %}
                    <small class="d-block opacity-75">Connecté : Utilisateur</small>
                {% else %}
                    <small class="d-block opacity-75">Visiteur</small>
                {% endif %}
            </div>
        </div>
    </footer>
{% endblock %}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{{ encore_entry_script_tags('app') }}
{% block javascripts %}{% endblock %}
</body>
</html>
