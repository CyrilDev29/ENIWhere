{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}ENIWhere{% endblock %}</title>

    {# Police Montserrat #}
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">

    {# Bootstrap + Icons #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    {# CSS principal (AssetMapper) #}
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% block stylesheets %}{% endblock %}
</head>

{# Pour afficher le campus : {% block body_class %}bg-landing{% endblock %} #}
<body class="app-body d-flex flex-column min-vh-100 {% block body_class %}{% endblock %}">
<div class="bg-overlay"></div>

{# ===== NAVBAR ===== #}
<nav class="navbar navbar-expand-lg topbar border-bottom mb-4">
    <div class="container-xxl">
        <a class="navbar-brand d-flex align-items-center gap-2" href="{{ path('app_main') }}">
            <img src="{{ asset('images/logo-eniwhere.png') }}" alt="ENI’where" height="90" class="rounded">
            <span class="fw-semibold">ENI’where</span>
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Basculer la navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                {% if app.user %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('profile_edit') }}">Profil ({{ app.user.username }})</a></li>

                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('admin_user_list') }}">Utilisateurs</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('admin_user_create') }}">Créer un utilisateur</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('admin_import_users') }}">Importer des utilisateurs</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('my_events') }}">Gérer les sorties</a></li>
                    {% elseif is_granted('ROLE_USER') %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('event_index') }}">Toutes les sorties</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('event_new') }}">Créer une sortie</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('my_events') }}">Mes sorties</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('city_new') }}">Créer une ville</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('my_registrations') }}">Mes inscriptions</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('city_index') }}">Voire les villes</a></li>
                    {% endif %}

                    <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}">Se déconnecter</a></li>
                {% else %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Se connecter</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_register') }}">Créer un compte</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

{# ===== CONTENU ===== #}
<main class="page-wrap container-xxl mb-5 flex-grow-1">
    {# Flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} shadow-sm" role="alert">
                {{ message|raw }}
            </div>
        {% endfor %}
    {% endfor %}

    {# Par défaut : wrapper avec une carte centrée.
       Pour remplacer (ex: accueil), utiliser {% block page_shell %} ... {% endblock %} #}
    {% block page_shell %}
        <div class="{% block content_container_classes %}col-12 col-xl-10 col-lg-11 mx-auto{% endblock %}">
            <div class="card">
                <div class="card-body p-3">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
    {% endblock %}

</main>

{# ===== FOOTER ===== #}
{% block footer %}
    <footer class="footer pt-4 pb-2 mt-auto">
        <div class="container-xxl">
            <div class="row text-center text-md-start">
                <div class="col-md-4 mb-4">
                    <h5 class="text-uppercase">ENIWHERE</h5>
                    <p class="mb-0">
                        Organise, participe et partage tes sorties entre apprenants ENI.
                    </p>
                </div>

                <div class="col-md-4 mb-4">
                    <h5 class="text-uppercase">Liens utiles</h5>
                    <ul class="list-unstyled mb-0">
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="{{ path('admin_user_list') }}">Utilisateurs</a></li>
                            <li><a href="{{ path('admin_user_create') }}">Créer un utilisateur</a></li>
                            <li><a href="{{ path('admin_import_users') }}">Importer des utilisateurs</a></li>
                            <li><a href="{{ path('my_events') }}">Gérer les sorties</a></li>
                        {% elseif is_granted('ROLE_USER') %}
                            <li><a href="{{ path('event_index') }}">Toutes les sorties</a></li>
                            <li><a href="{{ path('my_events') }}">Mes sorties</a></li>
                            <li><a href="{{ path('event_new') }}">Créer une sortie</a></li>
                            <li><a href="{{ path('profile_show') }}">Mon profil</a></li>
                        {% else %}
                            <li><a href="{{ path('event_index') }}">Accueil</a></li>
                            <li><a href="{{ path('app_login') }}">Se connecter</a></li>
                        {% endif %}

                        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                            <li><a href="{{ path('app_logout') }}">Se déconnecter</a></li>
                        {% endif %}
                    </ul>
                </div>

                <div class="col-md-4 mb-4">
                    <h5 class="text-uppercase">Suivez-nous</h5>
                    <div class="d-flex gap-3 justify-content-md-start justify-content-center">
                        <a aria-label="Facebook" href="#"><i class="bi bi-facebook fs-5"></i></a>
                        <a aria-label="X" href="#"><i class="bi bi-twitter-x fs-5"></i></a>
                        <a aria-label="Instagram" href="#"><i class="bi bi-instagram fs-5"></i></a>
                    </div>
                </div>
            </div>

            <div class="text-center mt-2">
                <small>&copy; {{ "now"|date("Y") }} ENIWhere — Tous droits réservés.</small>
            </div>
        </div>
    </footer>
{% endblock %}

{# ===== JS ===== #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{{ importmap('app') }}
{% block javascripts %}{% endblock %}
</body>
</html>
