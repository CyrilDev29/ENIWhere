{% extends 'base.html.twig' %}

{% block title %}Gérer l'événement{% endblock %}

{% block body %}
    <div class="container mt-5 p-4 bg-light rounded shadow-sm">

        {# Flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <h1 class="mb-5 text-center text-primary fw-bold border-bottom pb-3">
            Gérer : {{ event.name ?? ('Événement #' ~ event.id) }}
        </h1>

        {# Workflow actions #}
        <div class="mb-4 d-flex flex-wrap gap-2 justify-content-center">
            {% set state = event.state|upper %}
            {% set actions = [
                { 'route': 'event_publish',     'label': 'Publier',              'class': 'primary',   'enabled': ['CREATED'] },
                { 'route': 'event_open_regs',   'label': 'Ouvrir inscriptions',  'class': 'secondary', 'enabled': ['PUBLISHED'] },
                { 'route': 'event_close_regs',  'label': 'Fermer inscriptions',  'class': 'warning',   'enabled': ['OPEN'] },
                { 'route': 'event_start',       'label': 'Démarrer',             'class': 'info',      'enabled': ['CLOSED'] },
                { 'route': 'event_finish',      'label': 'Terminer',             'class': 'success',   'enabled': ['ONGOING'] }
            ] %}
            {% for a in actions %}
                <form method="post" action="{{ path(a.route, {id: event.id}) }}" class="m-0">
                    <input type="hidden" name="_token" value="{{ csrf_token(a.route ~ '_' ~ event.id) }}">
                    <button class="btn btn-{{ a.class }} btn-sm me-2 mb-2"
                            {% if state not in a.enabled %}disabled{% endif %}>
                        {{ a.label }}
                    </button>
                </form>
            {% endfor %}


            <button class="btn btn-danger btn-sm me-2 mb-2"
                    data-bs-toggle="modal" data-bs-target="#cancelModal-{{ event.id }}"
                    {% if state in ['FINISHED','CANCELED'] %}disabled{% endif %}>
                Annuler
            </button>
        </div>

        {# Cancel modal #}
        <div class="modal fade" id="cancelModal-{{ event.id }}" tabindex="-1" aria-labelledby="cancelModalLabel-{{ event.id }}" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content border-danger rounded shadow">
                    <form method="post" action="{{ path('event_cancel', {id: event.id}) }}">
                        <div class="modal-header bg-danger text-white">
                            <h5 class="modal-title" id="cancelModalLabel-{{ event.id }}">Motif d’annulation</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fermer"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="_token" value="{{ csrf_token('cancel_event_' ~ event.id) }}">
                            <div class="mb-3">
                                <label for="cancel-reason-{{ event.id }}" class="form-label fw-bold">Expliquez pourquoi :</label>
                                <textarea id="cancel-reason-{{ event.id }}" name="reason" class="form-control" rows="4"
                                          required placeholder="Ex. météo, manque de participants..."></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary w-50" data-bs-dismiss="modal">Retour</button>
                            <button type="submit" class="btn btn-danger w-50">Confirmer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        {# Formulaire édition si autorisé #}
        {% if canEdit %}

            <div class="card shadow-sm rounded mb-4 form-card">
                <div class="card-body">
                    <h3 class="mb-3 text-primary fw-bold">Modifier l'événement</h3>

                    {% form_theme form 'bootstrap_5_layout.html.twig' %}
                    {{ form_start(form, { attr: { class: 'needs-validation', novalidate: 'novalidate' } }) }}

                    <div class="row g-3">
                        {{ form_row(form.name) }}
                        {{ form_row(form.startDateTime) }}
                        {{ form_row(form.duration) }}
                        {{ form_row(form.registrationDeadline) }}
                        {{ form_row(form.maxParticipant) }}
                        {{ form_row(form.description) }}
                        {{ form_row(form.site) }}
                        {{ form_row(form.place) }}
                        {{ form_row(form.street) }}
                        {{ form_row(form.postalCode) }}
                        {{ form_row(form.city) }}
                        {{ form_row(form.gpsLatitude) }}
                        {{ form_row(form.gpsLongitude) }}
                    </div>

            <div class="card shadow-sm rounded mb-4 border border-primary form-card">
                <div class="card-body p-4">
                    <h3 class="mb-3 text-primary fw-bold">Modifier l'événement</h3>

                    {# >>> Ajout du form_theme Bootstrap <<< #}
                    {% form_theme form 'bootstrap_5_layout.html.twig' %}

                    {{ form_start(form, { attr: { class: 'needs-validation', novalidate: 'novalidate' } }) }}
                    {{ form_errors(form) }}
                    {{ form_widget(form) }}


                    <div class="mt-3 d-flex gap-2 flex-wrap">
                        <button class="btn btn-primary">Enregistrer</button>
                        <a href="{{ path('event_manage', { id: event.id }) }}" class="btn btn-outline-secondary">Annuler</a>
                    </div>
                    {{ form_end(form) }}


                    {# Suppression #}
                    <form method="post" action="{{ path('event_delete', {id: event.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cet événement ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_event_' ~ event.id) }}">
                        <button class="btn btn-danger mt-3 w-100">Supprimer l'événement</button>
                    </form>

                </div>
            </div>
        {% else %}
            <div class="d-flex gap-2 mb-4">
                <a href="{{ path('event_index') }}" class="btn btn-secondary btn-sm w-100 w-md-auto">Retour</a>
            </div>
        {% endif %}

    </div>
{% endblock %}
