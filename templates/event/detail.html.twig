{% extends 'base.html.twig' %}

{% block title %}Détail de {{ event.name }}{% endblock %}

{# Feuille de style Leaflet (nécessaire pour l'affichage propre de la carte) #}
{% block stylesheets %}
    <link
        rel="stylesheet"
        href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
        integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
        crossorigin=""
    >
{% endblock %}

{% block body %}
    <div class="container my-5">

        {# En-tête #}
        <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
            <h1 class="fw-bold mb-2 mb-lg-0">
                <i class="bi bi-calendar2-event-fill text-primary me-2"></i>{{ event.name }}
            </h1>
            {% if event.state %}
                <span class="badge rounded-pill bg-info-subtle text-info fs-6">{{ event.state }}</span>
            {% endif %}
        </div>

        {# Flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row gy-4">
            {# Colonne gauche : infos + participants #}
            <div class="col-lg-8">

                <div class="card mb-4">
                    <div class="card-header bg-primary-subtle text-primary border-0">
                        <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Informations</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-2"><strong>Date de début :</strong> {{ event.startDateTime|date('d/m/Y H:i') }}</p>
                        <p class="mb-2"><strong>Inscriptions jusqu'au :</strong> {{ event.registrationDeadline|date('d/m/Y H:i') }}</p>
                        <p class="mb-2"><strong>Durée :</strong> {{ event.duration }} heures</p>
                        <p class="mb-2"><strong>Description :</strong> {{ event.description }}</p>
                        <p class="mb-2"><strong>Lieu :</strong> {{ event.place ? event.place.name : '–' }}</p>
                        <p class="mb-0"><strong>Organisateur :</strong>
                            {% if event.organizer %}
                                <a href="{{ path('user_profile_show', {id: event.organizer.id}) }}" class="link-primary fw-semibold">
                                    {{ event.organizer.username }}
                                </a>
                            {% else %}
                                &ndash;
                            {% endif %}
                        </p>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header bg-primary-subtle text-primary border-0">
                        <h5 class="mb-0">
                            <i class="bi bi-people-fill me-2"></i>
                            Participants ({{ event.registrations|filter(r => r.workflowState in ['REGISTERED', 'NOTIFIED'])|length }}/{{ event.maxParticipant }})
                        </h5>
                    </div>

                    {% set activeRegs = event.registrations|filter(r => r.workflowState in ['REGISTERED', 'NOTIFIED']) %}
                    <ul class="list-group list-group-flush">
                        {% for reg in activeRegs %}
                            {% if reg.participant %}
                                <li class="list-group-item d-flex align-items-center">
                                    <i class="bi bi-person-plus-fill text-primary me-2"></i> {{ reg.participant.username }}
                                </li>
                            {% endif %}
                        {% else %}
                            <li class="list-group-item text-muted">Aucun participant</li>
                        {% endfor %}
                    </ul>
                </div>

            </div>

            {# Colonne droite : carte + actions #}
            <div class="col-lg-4">

                {% if event.place and event.place.gpsLatitude and event.place.gpsLongitude %}
                    <div class="card mb-4">
                        <div class="card-header bg-primary-subtle text-primary border-0">
                            <h6 class="mb-0"><i class="bi bi-map-fill me-2"></i>Localisation</h6>
                        </div>
                        <div class="card-body p-0">
                            <div id="map" style="height: 250px; width: 100%;"></div>
                        </div>
                    </div>
                {% endif %}

                <div class="card">
                    <div class="card-header bg-primary-subtle text-primary border-0">
                        <h6 class="mb-0"><i class="bi bi-activity me-2"></i>Actions</h6>
                    </div>
                    <div class="card-body text-center">

                        {% if app.user %}
                            {% set inscrit = false %}
                            {% for reg in event.registrations %}
                                {% if reg.participant and reg.participant.id == app.user.id and reg.workflowState in ['REGISTERED', 'NOTIFIED'] %}
                                    {% set inscrit = true %}
                                {% endif %}
                            {% endfor %}

                            {% if not inscrit and event.state == 'OPEN' %}
                                <a href="{{ path('event_inscription', {'id': event.id}) }}" class="btn btn-primary btn-lg w-100 mb-2">
                                    <i class="bi bi-check-circle-fill me-1"></i> S'inscrire
                                </a>
                            {% elseif inscrit %}
                                <div class="alert alert-success py-2 mb-2">
                                    <i class="bi bi-check-lg"></i> Vous êtes inscrit
                                </div>
                                <a href="{{ path('event_desistement', {'id': event.id}) }}" class="btn btn-outline-danger btn-lg w-100">
                                    <i class="bi bi-x-circle-fill me-1"></i> Se désister
                                </a>
                            {% else %}
                                <div class="alert alert-secondary py-2 mb-2">
                                    Les inscriptions sont fermées pour cet événement.
                                </div>
                            {% endif %}

                        {% else %}
                            <p class="text-muted mb-3">Vous devez être connecté</p>
                            <a href="{{ path('app_login') }}" class="btn btn-outline-primary btn-lg w-100">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Se connecter
                            </a>
                        {% endif %}

                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {% if event.place and event.place.gpsLatitude and event.place.gpsLongitude %}
        <script
            src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""
        ></script>
        <script>
            document.addEventListener('DOMContentLoaded', () => {
                const map = L.map('map').setView([{{ event.place.gpsLatitude }}, {{ event.place.gpsLongitude }}], 15);
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '&copy; OpenStreetMap contributors'
                }).addTo(map);
                L.marker([{{ event.place.gpsLatitude }}, {{ event.place.gpsLongitude }}])
                    .addTo(map)
                    .bindPopup("<strong>{{ event.place.name }}</strong><br>{{ event.place.street|e('js') }}")
                    .openPopup();
                setTimeout(() => map.invalidateSize(), 0);
            });
        </script>
    {% endif %}
{% endblock %}

