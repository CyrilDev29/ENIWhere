{% extends 'base.html.twig' %}

{% block title %}Détail de {{ event.name }}{% endblock %}

{% block stylesheets %}
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #76f0f1, #9b79e0);
            color: #202020;
        }

        /* Cartes modernes */
        .card {
            border-radius: 20px;
            box-shadow: 0 12px 28px rgba(0,0,0,0.12);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 18px 35px rgba(0,0,0,0.18);
        }

        .card-header {
            background-color: #667eea; /* couleur moderne personnalisée */
            color: #101112;
            font-weight: 600;
            font-size: 1rem;
            border-top-left-radius: 20px;
            border-top-right-radius: 20px;
        }

        .card-body {
            font-size: 0.95rem;
        }

        .list-group-item {
            font-size: 0.95rem;
            border: none;
            padding: 0.8rem 1rem;
            border-radius: 12px;
            transition: background 0.2s ease;
        }
        .list-group-item:hover {
            background-color: rgba(102, 126, 234, 0.1);
        }

        /* Badges */
        .badge {
            border-radius: 12px;
            padding: 0.5rem 0.8rem;
            font-weight: 600;
            font-size: 0.85rem;
        }
        .badge.bg-info {
            background-color: #52c364;
            color: #fff;
        }

        /* Boutons */
        .btn {
            border-radius: 12px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        .btn:hover {
            transform: translateY(-2px);
        }
        .btn-warning {
            background-color: #ff9900;
            color: #fff;
            border: none;
        }
        .btn-warning:hover {
            background-color: #e68a00;
        }
        .btn-outline-danger {
            border-radius: 12px;
            border: 2px solid #c81127;
            color: #c81127;
            background: transparent;
        }
        .btn-outline-danger:hover {
            background-color: #c81127;
            color: #fff;
        }
        .btn-outline-primary {
            border-radius: 12px;
            border: 2px solid #667eea;
            color: #667eea;
            background: transparent;
        }
        .btn-outline-primary:hover {
            background-color: #667eea;
            color: #fff;
        }

        /* Titres */
        h1.text-primary {
            color: #ff6600;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
        }

        /* Map */
        #map {
            border-radius: 0 0 20px 20px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container my-5">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
            <h1 class="text-primary fw-bold">
                <i class="bi bi-calendar2-event-fill"></i> {{ event.name }}
            </h1>
            {% if event.state %}
                <span class="badge bg-info text-dark fs-6">{{ event.state }}</span>
            {% endif %}
        </div>

        <!-- Flash messages -->
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row gy-4">
            <!-- Left column: informations + participants -->
            <div class="col-lg-8">
                <div class="card shadow-sm rounded mb-4">
                    <div class="card-header text-white fw-bold">
                        <i class="bi bi-info-circle"></i> Informations
                    </div>
                    <div class="card-body">
                        <p><strong>Date de début :</strong> {{ event.startDateTime|date('d/m/Y H:i') }}</p>
                        <p><strong>Inscriptions jusqu'au :</strong> {{ event.registrationDeadline|date('d/m/Y H:i') }}</p>
                        <p><strong>Durée :</strong> {{ event.duration }} heures</p>
                        <p><strong>Description :</strong> {{ event.description }}</p>
                        <p><strong>Lieu :</strong> {{ event.place ? event.place.name : '–' }}</p>
                        <p><strong>Organisateur :</strong>
                            {% if event.organizer %}
                                <a href="{{ path('user_profile_show', {id: event.organizer.id}) }}" class="link-primary fw-bold">
                                    {{ event.organizer.username }}
                                </a>
                            {% else %}
                                &ndash;
                            {% endif %}
                        </p>
                    </div>
                </div>

                <div class="card shadow-sm rounded mb-4">
                    <div class="card-header text-white fw-bold">
                        <i class="bi bi-people-fill"></i> Participants ({{ event.registrations|filter(r => r.workflowState in ['REGISTERED', 'NOTIFIED'])|length }}/{{ event.maxParticipant }})
                    </div>
                    <ul class="list-group list-group-flush">
                        {% set activeRegs = event.registrations|filter(r => r.workflowState in ['REGISTERED', 'NOTIFIED']) %}
                        {% for reg in activeRegs %}
                            {% if reg.participant %}
                                <li class="list-group-item d-flex align-items-center">
                                    <i class="bi bi-person-plus-fill text-primary me-2"></i> {{ reg.participant.username }}
                                </li>
                            {% endif %}
                        {% else %}
                            <li class="list-group-item text-muted">Aucun participant</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

            <!-- Right column: map + actions -->
            <div class="col-lg-4">
                {% if event.place and event.place.gpsLatitude and event.place.gpsLongitude %}
                    <div class="card shadow-sm rounded mb-4">
                        <div class="card-header text-white fw-bold">
                            <i class="bi bi-map-fill"></i> Localisation
                        </div>
                        <div class="card-body p-0">
                            <div id="map" style="height: 250px; width: 100%;"></div>
                        </div>
                    </div>
                {% endif %}

                <div class="card-body text-center">
                    {% if app.user %}
                        {% set inscrit = false %}
                        {% for reg in event.registrations %}
                            {% if reg.participant and reg.participant.id == app.user.id and reg.workflowState in ['REGISTERED', 'NOTIFIED'] %}
                                {% set inscrit = true %}
                            {% endif %}
                        {% endfor %}

                        {% if not inscrit and event.state == 'OPEN' %}
                            <a href="{{ path('event_inscription', {'id': event.id}) }}" class="btn btn-warning btn-lg w-100 mb-2">
                                <i class="bi bi-check-circle-fill"></i> S'inscrire
                            </a>
                        {% elseif inscrit %}
                            <div class="alert alert-success py-2 mb-2">
                                <i class="bi bi-check-lg"></i> Vous êtes inscrit
                            </div>
                            <a href="{{ path('event_desistement', {'id': event.id}) }}" class="btn btn-outline-danger btn-lg w-100">
                                <i class="bi bi-x-circle-fill"></i> Se désister
                            </a>
                        {% else %}
                            <div class="alert alert-secondary py-2 mb-2">
                                Les inscriptions sont fermées pour cet événement.
                            </div>
                        {% endif %}
                    {% else %}
                        <p class="text-muted mb-3">Vous devez être connecté</p>
                        <a href="{{ path('app_login') }}" class="btn btn-outline-primary btn-lg w-100">
                            <i class="bi bi-box-arrow-in-right"></i> Se connecter
                        </a>
                    {% endif %}
                </div>
            </div> {# Fin col-lg-4 #}
        </div> {# Fin row gy-4 #}
    </div> {# Fin container my-5 #}
{% endblock %}

{% block javascripts %}
    {% if event.place and event.place.gpsLatitude and event.place.gpsLongitude %}
        <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
        <script>
            document.addEventListener('DOMContentLoaded', () => {
                const map = L.map('map').setView([{{ event.place.gpsLatitude }}, {{ event.place.gpsLongitude }}], 15);
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '&copy; OpenStreetMap contributors'
                }).addTo(map);
                L.marker([{{ event.place.gpsLatitude }}, {{ event.place.gpsLongitude }}])
                    .addTo(map)
                    .bindPopup("<strong>{{ event.place.name }}</strong><br>{{ event.place.street }}")
                    .openPopup();
                map.invalidateSize();
            });
        </script>
    {% endif %}
{% endblock %}
