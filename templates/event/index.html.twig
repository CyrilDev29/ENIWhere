{% extends 'base.html.twig' %}

{% block title %}Toutes les sorties{% endblock %}

{% block body %}
    <h1>Toutes les sorties</h1>

    {% if events is empty %}
        <p>Aucune sortie trouvée.</p>
    {% else %}
        <table border="1" cellpadding="5">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Date/heure</th>
                <th>Site</th>
                <th>Lieu</th>
                <th>État</th>
                <th>Inscrits</th>
            </tr>
            </thead>
            <tbody>
            {% for e in events %}
                <tr>
                    <td>{{ e.name }}</td>
                    <td>
                        {% if e.startDateTime %}
                            {{ e.startDateTime|date('d/m/Y H:i') }}
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td>{{ e.site ? e.site.name : '-' }}</td>
                    <td>{{ e.place ? e.place.name : '-' }}</td>
                    <td>{{ e.state ? e.state.label : '-' }}</td>
                    <td>{{ e.registrations|length }}/{{ e.maxParticipant ?? '-' }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
