{% extends 'base.html.twig' %}

{% block title %}Toutes les sorties{% endblock %}

{% block body %}
    <h1>Toutes les sorties</h1>

    <div class="filters">
        {{ form_start(filterForm, { method: 'get' }) }}
        {{ form_row(filterForm.site) }}
        {{ form_row(filterForm.q) }}
        {{ form_row(filterForm.dateFrom) }}
        {{ form_row(filterForm.dateTo) }}
        <div class="checkboxes">
            {{ form_row(filterForm.isOrganizer) }}
            {{ form_row(filterForm.isRegistered) }}
            {{ form_row(filterForm.isNotRegistered) }}
            {{ form_row(filterForm.includePast) }}
        </div>
        <button type="submit">Rechercher</button>
        <a href="{{ path('event_index') }}">Réinitialiser</a>
        {{ form_end(filterForm) }}
    </div>

    {% if events is empty %}
        <p>Aucune sortie trouvée.</p>
    {% else %}
        <table border="1" cellpadding="5">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Date/heure</th>
                <th>Site</th>
                <th>Lieu</th>
                <th>État</th>
                <th>Inscrits</th>
                <th>Organisateur</th>
                <th>Detail</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for e in events %}
                <tr>
                    <td>{{ e.name }}</td>
                    <td>{{ e.startDateTime ? e.startDateTime|date('d/m/Y H:i') : '-' }}</td>
                    <td>{{ e.site ? e.site.name : '-' }}</td>
                    <td>{{ e.place ? e.place.name : '-' }}</td>
                    <td>{{ e.status ?? (e.state ? e.state.label : '-') }}</td>
                    <td>{{ e.registrations|length }}/{{ e.maxParticipant ?? '-' }}</td>
                    <td>
                        {%  if e.organizer %}

                            <a href="{{ path('admin_user_edit', {id: e.organizer.id}) }}">{{ e.organizer.username }}</a>

                        <a href="{{ path('admin_user_edit', {id: e.organizer.id}) }}">{{ e.organizer.username }}</a>

                        {% else %}-{% endif %}

                    </td>
                    <td>
                        <a href="{{ path('event_detail', {id: e.id}) }}" > Detail</a>
                    </td>
                    <td>
                        {# Publier: draft -> published #}
                        <form method="post" action="{{ path('event_publish', {id: e.id}) }}" style="display:inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('publish_event_' ~ e.id) }}">
                            <button class="btn btn-sm btn-primary" {% if e.status != 'draft' %}disabled{% endif %}>Publier</button>
                        </form>

                        {# Ouvrir inscriptions: published -> registration_open #}
                        <form method="post" action="{{ path('event_open_regs', {id: e.id}) }}" style="display:inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('open_event_' ~ e.id) }}">
                            <button class="btn btn-sm btn-secondary" {% if e.status != 'published' %}disabled{% endif %}>Ouvrir</button>
                        </form>

                        {# Fermer inscriptions: registration_open -> registration_closed #}
                        <form method="post" action="{{ path('event_close_regs', {id: e.id}) }}" style="display:inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('close_event_' ~ e.id) }}">
                            <button class="btn btn-sm btn-warning" {% if e.status != 'registration_open' %}disabled{% endif %}>Fermer</button>
                        </form>

                        {# Démarrer: registration_closed -> ongoing #}
                        <form method="post" action="{{ path('event_start', {id: e.id}) }}" style="display:inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('start_event_' ~ e.id) }}">
                            <button class="btn btn-sm btn-info" {% if e.status != 'registration_closed' %}disabled{% endif %}>Démarrer</button>
                        </form>

                        {# Terminer: ongoing -> finished #}
                        <form method="post" action="{{ path('event_finish', {id: e.id}) }}" style="display:inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('finish_event_' ~ e.id) }}">
                            <button class="btn btn-sm btn-success" {% if e.status != 'ongoing' %}disabled{% endif %}>Terminer</button>
                        </form>

                        {# Annuler: (tous sauf finished/canceled) -> canceled #}
                        <form method="post" action="{{ path('event_cancel', {id: e.id}) }}" style="display:inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('cancel_event_' ~ e.id) }}">
                            <button class="btn btn-sm btn-danger" {% if e.status in ['finished','canceled'] %}disabled{% endif %}>Annuler</button>
                        </form>
                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}

