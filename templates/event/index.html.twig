{% extends 'base.html.twig' %}

{% block title %}Toutes les sorties{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="mb-4 text-primary"><i class="bi bi-calendar-event"></i> Toutes les sorties</h1>

        <div class="filters mb-4">
            {{ form_start(filterForm, { method: 'get', attr: {class: 'row g-3'} }) }}
            <div class="col-md-3">{{ form_row(filterForm.site) }}</div>
            <div class="col-md-3">{{ form_row(filterForm.q) }}</div>
            <div class="col-md-3">{{ form_row(filterForm.dateFrom) }}</div>
            <div class="col-md-3">{{ form_row(filterForm.dateTo) }}</div>
            <div class="col-12 d-flex flex-wrap gap-2">
                {{ form_row(filterForm.isOrganizer) }}
                {{ form_row(filterForm.isRegistered) }}
                {{ form_row(filterForm.isNotRegistered) }}
                {{ form_row(filterForm.includePast) }}
            </div>
            <div class="col-12 mt-2">
                <button type="submit" class="btn btn-primary me-2"><i class="bi bi-search"></i> Rechercher</button>
                <a href="{{ path('event_index') }}" class="btn btn-secondary"><i class="bi bi-arrow-counterclockwise"></i> Réinitialiser</a>
            </div>
            {{ form_end(filterForm) }}
        </div>

        {% if events is empty %}
            <div class="alert alert-info"><i class="bi bi-info-circle"></i> Aucune sortie trouvée.</div>
        {% else %}
            <div class="row g-4">
                {% for e in events %}
                    <div class="col-md-6 col-lg-4">
                        <div class="card event-card h-100 shadow-sm">
                            <div class="card-header d-flex justify-content-between align-items-center bg-light">
                                <span class="fw-bold">{{ e.name }}</span>
                                <span class="badge
                            {% if e.state == 'OPEN' %}bg-success
                            {% elseif e.state == 'CANCELED' %}bg-danger
                            {% else %}bg-warning text-dark{% endif %}">
                                {{ e.state }}
                            </span>
                            </div>
                            <div class="card-body">
                                <p><strong>Date / Heure :</strong> {{ e.startDateTime ? e.startDateTime|date('d/m/Y H:i') : '-' }}</p>
                                <p><strong>Site :</strong> {{ e.site ? e.site.name : '-' }}</p>
                                <p><strong>Lieu :</strong> {{ e.place ? e.place.name : '-' }}</p>
                                <p><strong>Durée :</strong> {{ e.duration }} h</p>
                                <p><strong>Inscriptions :</strong> {{ e.registrations|length }}/{{ e.maxParticipant ?: '-' }}</p>
                                <p class="description">{{ e.description|length > 100 ? e.description|slice(0,100) ~ '...' : e.description }}</p>
                                {% if e.cancellationReason %}
                                    <p class="text-danger"><strong>Raison d'annulation :</strong> {{ e.cancellationReason }}</p>
                                {% endif %}
                            </div>
                            <div class="card-footer text-center">
                                <a href="{{ path('event_detail', {id: e.id}) }}" class="btn btn-primary btn-sm w-75">
                                    <i class="bi bi-eye-fill"></i> Voir / S'inscrire
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <style>

        .event-card {
            border-radius: 12px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .event-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
        }
        .event-card .card-header {
            font-size: 1rem;
            font-weight: 600;
            border-bottom: none;
        }
        .event-card .card-body p {
            margin-bottom: 0.5rem;
        }
        .event-card .description {
            color: #555;
            font-size: 0.9rem;
        }
        .event-card .badge {
            font-size: 0.8rem;
            padding: 0.4em 0.6em;
        }
        .event-card .btn {
            font-weight: 600;
            transition: background 0.3s ease;
        }
        .event-card .btn:hover {
            background-color: #0056b3;
            color: #fff;
        }

        /* Responsive adjustments */
        @media (max-width: 767px) {
            .event-card {
                margin-bottom: 1rem;
            }
        }
    </style>
{% endblock %}
