{% extends 'base.html.twig' %}
{% block title 'Lieux' %}

{% block body %}
    <h1>Lieux</h1>

    <a href="{{ path('place_new') }}" class="btn btn-primary">Nouveau lieu</a>

    <table class="table mt-3">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Adresse</th>
            <th>Ville</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for place in places %}
            <tr>
                <td>{{ place.name }}</td>
                <td>{{ place.street }}</td>
                <td>{{ place.city ? place.city.name : '' }}</td>
                <td>
                    <a href="{{ path('place_edit', {id: place.id}) }}" class="btn btn-sm btn-secondary">Éditer</a>
                    <form method="post" action="{{ path('place_delete', {id: place.id}) }}" style="display:inline" onsubmit="return confirm('Supprimer ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_place_' ~ place.id) }}">
                        <button class="btn btn-sm btn-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun lieu enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
