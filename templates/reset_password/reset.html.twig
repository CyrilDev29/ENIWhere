{% extends 'base.html.twig' %}

{% block title %}Définir un nouveau mot de passe{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-primary-subtle text-primary border-0">
                        <h5 class="mb-0">Définir un nouveau mot de passe</h5>
                    </div>
                    <div class="card-body">

                        <p class="mb-4">
                            Choisissez un nouveau mot de passe pour sécuriser votre compte.
                        </p>

                        {{ form_start(resetForm) }}
                        <div class="mb-3">
                            {{ form_row(resetForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <button class="btn btn-primary w-100">
                            Réinitialiser le mot de passe
                        </button>
                        {{ form_end(resetForm) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
