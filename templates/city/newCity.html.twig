{% extends 'base.html.twig' %}

{% block title %}Créer une ville{% endblock %}

{% block stylesheets %}
    <style>
        .form-card {
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0,0,0,.08);
            transition: transform .28s ease, box-shadow .28s ease;
        }
        .form-card:hover {
            transform: translateY(-6px) scale(1.02);
            box-shadow: 0 22px 45px rgba(0,0,0,.18);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 col-lg-5">
                <div class="card form-card">
                    <div class="card-header bg-primary-subtle text-primary border-0">
                        <h5 class="mb-0">Créer une ville</h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom de la ville'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.postalCode, {'attr': {'class': 'form-control', 'placeholder': 'Code postal'}}) }}
                        </div>
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                            <a href="{{ path('city_index') }}" class="btn btn-outline-secondary">← Retour</a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

